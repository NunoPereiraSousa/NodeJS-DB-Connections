    "produces": ["application/json"],
    "schemes": ["http"],
    "components": {
        "schemas":{
            "Student": {
                "type": "object",
                "required": ["name", "age"],
                "properties": {
                    "name": {
                        "type": "string"
                    }, 
                    "age": {
                        "type": "integer"
                    }
                }
            },
            "User": {
                "type": "object",
                "required": ["username", "password"],
                "properties": {
                    "username": {
                        "type": "string"
                    }, 
                    "password": {
                        "type": "string"
                    }
                }
            }
        },
        "securitySchemes": {
            "bearer": {
                "type": "http",
                "scheme": "bearer",
                "bearerFormat": "JWT"
            }
        }
    }, 
